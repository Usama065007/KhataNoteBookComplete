<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="btn_pakka_khata"
    android:orientation="vertical"
    android:background="@drawable/khata"
    tools:context=".Main_Start">


    <Button
        android:id="@+id/btn_pakka_khata"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="50dp"

        android:onClick="btn_pakka_khata"
        android:text="Pakka Khata" />

    <Button
        android:id="@+id/btn_kacha_khata"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:onClick="btn_kacha_khata"
        android:text="Kacha Khata" />
</LinearLayout>