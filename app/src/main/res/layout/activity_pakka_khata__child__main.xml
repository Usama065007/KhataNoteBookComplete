<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PakkaKhata_Child_Main">

    <fragment
        android:id="@+id/fragment4"
        android:name="com.example.khatanotebook.PakkaKhata_Child_DetailTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        tools:layout="@layout/fragment_pakka_khata__child__detail_top" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pk_child_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15" />

    <fragment
        android:id="@+id/fragment5"
        android:name="com.example.khatanotebook.PakkaKhata_Child_AddBill"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.5"
        tools:layout="@layout/fragment_pakka_khata__child__add_bill" />

</LinearLayout>