<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding="10dp"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#f6f5f5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bill" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pk_child_R_BillName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daal+Chawal"
                    android:textColor="#4C4A4A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pk_child_R_TotalItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Items = 2"
                    android:textColor="#575656"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/pk_child_R_TotalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Amount = 500"
                    android:textColor="#575656"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/pk_child_R_ReceivedAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Received Amount = 200"
                    android:textColor="#575656"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/pk_child_R_PendingAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending Amount = 300"
                    android:textColor="#575656"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="117dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pk_child_R_ivEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_edit_24" />

                    <ImageView
                        android:id="@+id/pk_child_R_ivDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/delete" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/pk_child_R_ivMessage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/message_b" />

                <TextView
                    android:id="@+id/pk_child_R_Date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="12/25/2021"
                    android:textColor="#8A8888"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>