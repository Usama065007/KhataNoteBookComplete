<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:shadowColor="@android:color/holo_red_light"
        android:text="Edit Khata Detail"
        android:textColor="#00BCD4"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pk_dialogKhataName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Enter Khata Name..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pk_dialogPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Enter Phone Number..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pk_dialog_IDcardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Enter ID Card Number..."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/pk_btnDialogUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="Update" />
</LinearLayout>